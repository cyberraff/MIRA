// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  USER
  ADMIN
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(USER)
  accounts      Account[]
  sessions      Session[]
  films         Film[]
  favorites     Favorite[]
  watchProgress WatchProgress[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Film {
  id            String   @id @default(cuid())
  title         String
  description   String
  thumbnailUrl  String
  videoUrl      String   // This will store the Mux playback ID
  videoAssetId  String?  // Mux Asset ID
  trailerUrl    String?  // Mux playback ID for the trailer
  trailerAssetId String? // Mux Asset ID for the trailer
  trailerThumbnailUrl String?
  trailerDuration String?
  
  btsUrl    String?  // Mux playback ID for BTS
  btsAssetId String? // Mux Asset ID for BTS
  btsThumbnailUrl String?
  btsDuration String?

  duration      String
  director      String?
  year          Int?
  language      String?
  category      String
  tags          String[]
  visibility    Visibility @default(PUBLIC)
  views         Int      @default(0)
  likes         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String?
  user          User?    @relation(fields: [userId], references: [id])
  favorites     Favorite[]
  watchProgress WatchProgress[]
  collections   CollectionFilm[]
}

enum Visibility {
  PUBLIC
  PRIVATE
}

model Collection {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  films       CollectionFilm[]
}

model CollectionFilm {
  id           String     @id @default(cuid())
  collectionId String
  filmId       String
  order        Int        @default(0)
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  film         Film       @relation(fields: [filmId], references: [id], onDelete: Cascade)

  @@unique([collectionId, filmId])
}

model Favorite {
  id      String @id @default(cuid())
  userId  String
  filmId  String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  film    Film   @relation(fields: [filmId], references: [id], onDelete: Cascade)

  @@unique([userId, filmId])
}

model WatchProgress {
  id            String   @id @default(cuid())
  userId        String
  filmId        String
  lastTimestamp Float    @default(0)
  completed     Boolean  @default(false)
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  film          Film     @relation(fields: [filmId], references: [id], onDelete: Cascade)

  @@unique([userId, filmId])
}
